@page
@model PizzaPlace.Pages.OrderModel
@{
}

@{
    ViewData["Title"] = "Order";
}
<h3 style="color: rgb(65,41,46)">Make your order by filling this form</h3>

<div class="container-fluid">
    <div class="row justify-content-center align-content-center align-items-center p-2">
        <div class="col-md-5">
            <fieldset class="border rounded" p-2 m-2>
                <legend style="color: rgb(65,41,46)">Order form</legend>
                <form class="p-2" style="background: rgb(255,255,255); background: linear-gradient(180deg, rgba(255,255,255,1) 0%, rgba(237,130,55,1) 100%);;" asp-page="Order" method="post" onsubmit="return validateForm()">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label class="control-label" asp-for="@Model.Order.Name"><span class="text-danger">*</span>Name</label>
                        <input type="text" asp-for="@Model.Order.Name" class="form-control" required placeholder="Enter name" />
                        <span asp-validation-for="@Model.Order.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="@Model.Order.Surname"><span class="text-danger">*</span>Surname</label>
                        <input type="text" asp-for="@Model.Order.Surname" class="form-control" required placeholder="Enter Lastname" />
                        <span asp-validation-for="@Model.Order.Surname" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="@Model.Order.Address"><span class="text-danger">*</span>Addresss</label>
                        <input type="text" asp-for="@Model.Order.Address" class="form-control" required placeholder="Enter address" />
                        <span asp-validation-for="@Model.Order.Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="@Model.Order.Phone"><span class="text-danger">*</span>Phone</label>
                        <input type="number" asp-for="@Model.Order.Phone" class="form-control" required placeholder="Enter phone" />
                        <span asp-validation-for="@Model.Order.Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label class="control-label" asp-for="@Model.Order.Message"><span class="text-danger">*</span>Message</label>
                        <textarea type="text" asp-for="@Model.Order.Message" class="form-control" cols="20" rows="10" required placeholder="Enter message"></textarea>
                        <span asp-validation-for="@Model.Order.Message" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Submit order" class="btn" style="background-color: rgb(255,223,206); color: rgb(65,41,46); font-weight:bolder" />
                    </div>
                </form>
            </fieldset>
        </div>
        <div class="col-md-2"></div>
        <div class="col-md-5 rounded shadow">
            <img class="w-100" src="https://3dtext2gif.com/exported_stickers/_3dtext2gif_rcdkusnngkvr.gif" alt="Orderign gif" />
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/RequiredDataValidator.js"></script>
}