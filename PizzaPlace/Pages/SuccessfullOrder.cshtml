@page

@model PizzaPlace.Pages.SuccessfullOrderModel
@{
}

@{
    ViewData["Title"] = "Order confirmation";
}
@if (Model.Message != null)
{
    <div class="row justify-content-center text-center">
        <h3 class="p-2" style="color: rgb(40,167,69)">@Model.Message</h3>
    </div>
}
<div class="container">
    <div class="row justify-content-center align-content-center align-items-center">
        <div class="col p-2">
            <div class="m-2">
                <h3 style="color: rgb(65,41,46)">We received your order</h3>
                <h4 style="color: rgb(65,41,46)">You can track your orders by clicking on your name in the navbar.</h4>
            </div>
            <div class="m-2">
                <a asp-page="Order" class="btn btn-success">Make another order</a>
            </div>
        </div>
        <div class="col p-2">
            <fieldset class="border rounded p-2 m-2">
                <legend style="color: rgb(236,128,50)">Subscribe</legend>
                <form class="p-2" asp-page="SuccessfullOrder" method="post" onsubmit="return validateForm()">
                    <div class="form-group">
                        <label class="control-label" asp-for="@Model.SubscriptionEmail.Email"> Email</label>
                        <input type="email" asp-for="@Model.SubscriptionEmail.Email" class="form-control" required placeholder="Email" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Subscribe" class="btn btn-success" />
                    </div>
                </form>
            </fieldset>

        </div>
    </div>
</div>

<div class="container">
    <div class="row justify-content-center align-content-center align-items-center">
        <div class="col">
            <img src="https://media3.giphy.com/media/cmCHuk53AiTmOwBXlw/giphy.gif" />
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/RequiredDataValidator.js"></script>
}
